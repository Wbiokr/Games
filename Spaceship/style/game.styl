.result
  height 100%
  width 100%
  color #fff
  font-weight 600
  display flex
  justify-content center
  align-items center
  font-size 0.6rem
  padding-bottom 0.5rem
  box-sizing border-box
.msg
  background rgba(0,0,0,.8)
  opacity 0
  width 3.5rem
  line-height 0.3rem
  font-size 0.16rem
  color #fff
  padding 0.1rem 0.2rem
  position absolute
  top 40%
  left 50%
  transform translate(-50%,-50%)
  transition all ease 0.3s
  text-align center
  &.toast
    opacity 1
.app
  margin 0 auto
  // height 5rem
  width 5.5rem
  padding-top 0.2rem
  aside
    position fixed
    top 0 
    left 0
    width 100%
    height 100%
    background rgba(0,0,0,.7)
    display flex
    justify-content center
    align-items center
    section
      background #fff 
      border-radius 0.1rem 
      overflow hidden 
      padding 0.3rem 0.16rem 
      h3
        font-size 0.18rem 
        color #ca6 
        padding-bottom 0.2rem 
      p
        color #999 
        font-size 0.14rem 
      input
        width 100%
        border 1px solid #ccc 
        line-height 0.4rem 
        margin-top 0.2rem 
        border-radius 0.06rem 
        padding-left 0.2rem 
        box-sizing border-box 
  footer
    button
      background #c51
      font-size 0.2rem
      color #ffffff
      line-height 0.4rem
      text-align center
      width 0.8rem
      border-radius 0.06rem
      margin-top 0.02rem
      display none
      &:active
        opacity 0.5
  header
    // position relative
    h3
      float left
      line-height 0.3rem
      font-size 0.18rem
      color #ca6
      font-weight 600
    ul
      float right
      display none
      li
        float left
        line-height 0.3rem
        font-size 0.14rem
        color #333333
        margin-left 10px
        span
          color #ca6
  main
    border 1px solid #dedede
    height 5.5rem
    width 5.5rem
    background #ca6
    ul
      height 100%
      li
        float left
        width 10%
        height 10%
        box-sizing border-box
        border-bottom 1px solid #fff
        border-right 1px solid #fff
        font-size 0.26rem
        font-weight 600
        display flex
        justify-content center
        align-items center
        color #000
        &:nth-child(10n+0)
          border-right none
        &:nth-child(n+91)
          border-bottom none
        &:active
          background rgba(250,250,250,0.5)
        &.mineActive
          color orange
        &.uSpaceship
          color #fff
        &.over
          background #fff
        